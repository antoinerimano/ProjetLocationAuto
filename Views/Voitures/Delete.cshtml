@model Projet_Final.Models.Voiture

@{
    ViewData["Title"] = "Delete";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr de vouloir supprimer cette voiture?</h3>
<div>
    <h4>Voiture</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marque)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Modèle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Modèle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Année)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Année)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrixJournalier)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrixJournalier)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstDisponible)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstDisponible)
        </dd>
    </dl>
    
    <form asp-action="Supprimer">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
